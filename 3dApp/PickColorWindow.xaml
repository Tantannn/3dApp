<Window x:Class="_3dApp.PickColorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:_3dApp"
        mc:Ignorable="d"
        Title="Color" Height="170" Width="200">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Enter Hex Color (#RRGGBB):" Margin="5" />
            <TextBox x:Name="ColorInputBox" Width="100" Height="30" Margin="2 10 " Text="#FF0000" />
            <Button Content="Apply Color" Width="150" Height="30" Click="ApplyColor_Click" />
        </StackPanel>
    </Grid>
</Window>
